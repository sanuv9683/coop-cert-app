# .env
PORT=3000

# choose any random string (keep secret!)
SESSION_SECRET=your-very-long-secret-here

# your admin username
ADMIN_USER=admin

# a bcrypt hash of your chosen password (example uses "admin123")
# to generate one-off:
#   node -e "console.log(require('bcrypt').hashSync('admin123', 10))"
ADMIN_PASSWORD_HASH=$2b$10$uE1pFh...<rest of your hash>
